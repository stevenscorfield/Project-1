@model MarineTankCalculations.Models.Home

@{
    ViewBag.Title = "FishCalculator";
}


@using (Html.BeginForm())
{
    <section id="contact" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="center-heading text-center">
                        <h2>Fish Stock Calculator</h2><br>
                        <span class="icon"><i class="fa fa-calculator"></i></span>
                    </div><!--center heading-->
                </div>
                <div class="col-md-6 text-center">
                    <p class="info-text margin-btm-30">
                        To find out an estimate of how many fish you can have in a given tank size use the calulator.The calculator will give you an estimate
                        based upon fish size of 3.8cm/1.5". So adjust this estimate accordingly with the size of fish you require. For example if you can have 
                        4 fish but want fish of size 8cm/3" then just divide by 2.
                    </p>
                </div>
                <div class="col-md-1 margin-btm-30"></div>
                <div class="col-md-5 margin-btm-30">
                    <div class="row">
                        <div class="row control-group">
                            <div class="form-group col-xs-12  controls">
                                Metric: @Html.RadioButton("Units", "Metric", true)
                                Imperial: @Html.RadioButton("Units", "Imperial")
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="col-lg-12">
                                <div class="editor-label">
                                    @Html.Label("Please enter the volume of your tank:")
                                </div>
                                <div class="editor-label break">
                                    @Html.TextBox("Result")
                                </div>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="col-lg-12">
                                <div class="editor-label">
                                    <input type="submit" value="Calculate" class="btn btn-default" />
                                </div>
                                <div class="output">
                                    @ViewBag.Output
                                </div>
                                <div class="editor-label">
                                    @Html.Label("The amount of fish you can have in your tank is:")
                                </div>
                                <div class="editor-label">
                                    @Html.TextBox("Number")
                                </div><br />
                                <div>
                                    @ViewBag.Message
                                </div>
                            </div>
                        </div>
                    </div><!--center heading-->
                </div>
            </div>
        </div>
    </section><!--contact-->
}


