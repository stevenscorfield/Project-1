@model MarineTankCalculations.Models.Home

@{
    ViewBag.Title = "Rectangular Tank";
}

@using (Html.BeginForm())
{
    <section id="contact" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="center-heading text-center">
                        <h2>Rectangular Tank</h2><br>
                        <span class="icon"><i class="fa fa-calculator"></i></span>
                    </div><!--center heading-->
                </div>

                <div class="col-md-2 margin-btm-30"></div>
                <div class="col-md-4 margin-btm-30">
                    <div class="row">
                        <div class="row control-group">
                            <div class="form-group col-xs-12  controls">
                                Metric: @Html.RadioButton("Units", "Metric", true)
                                Imperial: @Html.RadioButton("Units", "Imperial")
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12  controls">
                                <div class="editor-label">
                                    @Html.Label("Please enter the length of your tank:")
                                </div>
                                <div class="editor-label">
                                    @Html.TextBox("length")
                                </div>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12  controls">
                                <div class="editor-label">
                                    @Html.Label("Please enter the width of your tank:")
                                </div>
                                <div class="editor-label">
                                    @Html.TextBox("width")
                                </div>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 controls">
                                <div class="editor-label">
                                    @Html.Label("Please enter the height of your tank:")
                                </div>
                                <div class="editor-label">
                                    @Html.TextBox("height")
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <div class="editor-label break">
                                    <input type="submit" value="Calculate" class="btn btn-default" />
                                </div>
                                <div class="output">
                                    @ViewBag.Output
                                </div>
                                <div class="editor-label">
                                    @Html.Label("Based on the sizes given, your tank volume is:")
                                </div>
                                <div class="editor-label">
                                     @Html.TextBox("Result")
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!--center heading-->
                <div class="col-md-6 info-text">
                    <p class="about-text margin-btm-30">
                        An rectangular shaped tank is quite easy to calculate. You need to measure the width, length and height and then enter them into the
                        the below boxes. Before you do, however, please select the units that you would like to use. When entering your
                        values, please use either cm or inches depending on selection made.
                    </p>
                </div>
            </div><br />
            <div class="col-md-12">
                <div class="center-heading text-center">
                    @Html.ActionLink("Back to Volume Selector", "Volume") |
                    @Html.ActionLink("Fish Calculator", "FishCalculator") |
                    @Html.ActionLink("Salinity Calculator", "Salinity")
                </div><!--center heading-->
            </div>
        </div>
    </section><!--contact-->
}

